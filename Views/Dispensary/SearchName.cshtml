@{
  Layout = "_Layout";
}

<h3>Here are all the results for your search</h3>
@if(Model.Count == 0){
<h2>Your search returned 0 results</h2>
   <form action='/dispensaries/searchbyname' method='post'>
      <label for='storeName'>Search by name: </label>
      <input id='storeName' name='storeName' type='text'>
      <button type='submit'>Search</button>
    </form>
}
else{
  
  <ul>
@foreach(var name in Model)

{
    <li><a href="/dispensaries/@name.GetLicense()"> @name.GetName()</a></li>
}
</ul>

  <form action='/dispensaries/searchbyname' method='post'>
      <label for='storeName'>Search by Name: </label>
      <input id='storeName' name='storeName' type='text'>
      <button type='submit'>Search</button>
    </form>
}